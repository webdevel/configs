}
Plugin {
  type=space
  Config {
    Size=2
  }
}
Plugin {
  type=menu
  Config {
    image=/usr/share/lxpanel/images/my-computer.png
    system {
    }
    separator {
    }
    item {
      command=run
      image=system-run
    }
    separator {
    }
    item {
      name=Suspend
      action=systemctl suspend
      image=system-log-out
    }
    item {
      name=Lock Screen
      action=i3lock -ec 000000
      image=changes-prevent
    }
    item {
      command=logout
      image=application-exit
    }
    item {
      name=Power Off
      action=systemctl poweroff
      image=process-stop
    }
  }
}
